@page
@model connect.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<main class="main">
    <style>
        body {
          background-color: #f8f9fa;
        }

        .login-container {
          display: flex;
          justify-content: center;
          align-items: center;
          min-height: 100vh;
        }

        .login-form {
          background: #fff;
          padding: 40px;
          border-radius: 10px;
          box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
          max-width: 400px;
          width: 100%;
        }

        .form-title {
          font-size: 28px;
          font-weight: 600;
          text-align: center;
          margin-bottom: 20px;
        }

        .btn.login-btn-primary {
          background-color: #007bff;
          color: #fff;
          font-weight: 600;
          padding: 10px 15px;
          border-radius: 5px;
          transition: all 0.3s ease;
        }

        .btn.login-btn-primary:hover {
          background-color: #0056b3;
        }

        .text-link {
          color: #007bff;
          text-decoration: none;
        }

        .text-link:hover {
          text-decoration: underline;
        }

        .form-check-label {
          font-size: 0.9rem;
          margin-left: 8px; /* Add some space between the checkbox and the label */
        }

        .form-group label {
          font-weight: 500;
        }

        .form-group input {
          height: 45px;
          font-size: 1rem;
        }

        .text-center p {
          margin-bottom: 0.5rem;
        }

        /* Custom styles for the checkbox */
        .form-check-input {
          width: 20px;
          height: 20px;
          cursor: pointer;
          accent-color: #007bff; /* Change the accent color for better visibility */
        }

        .eye-icon {
          cursor: pointer;
          position: absolute;
          right: 15px;
          top: 12px; /* Adjust this value based on your input field height */
          color: #007bff;
          transition: color 0.3s ease;
        }

        .eye-icon:hover {
          color: #0056b3;
        }

        .input-group {
          position: relative;
        }
    </style>
    <section class="login-container">
        <div class="login-form">
            <h2 class="form-title">Sign In</h2>
            <form method="post" id="login-form">
                @Html.AntiForgeryToken() <!-- CSRF Token -->
                <div class="form-group mb-3">
                    <label for="email_address" class="form-label">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input type="email" id="email_address" name="email_address" class="form-control" placeholder="Enter your email address" required autocomplete="true">
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input id="password" type="password" name="password" class="form-control" placeholder="Enter your password" required autocomplete="true">
                        <i class="fas fa-eye eye-icon" id="show-password-icon"></i> <!-- Eye icon -->
                    </div>
                </div>
                <div class="form-group form-check mb-4">
                    <input type="checkbox" class="form-check-input" id="show-password-checkbox">
                    <label class="form-check-label" for="show-password-checkbox">Show Password</label>
                </div>
                <button type="submit" class="btn login-btn-primary btn-block w-100">Login</button>
            </form>
            <div class="text-center mt-4">
                <p>Don't have an account? <a href="/Register" class="text-link">Register</a></p>
                <p><a href="/ForgotPassword" class="text-link">Forgot your password?</a></p>
            </div>
        </div>
    </section>
    <!-- Show Password Toggle -->
    <script>
        const showPasswordCheckbox = document.getElementById('show-password-checkbox');
        const passwordField = document.getElementById('password');
        const showPasswordIcon = document.getElementById('show-password-icon');

        showPasswordCheckbox.addEventListener('change', function () {
          passwordField.type = showPasswordCheckbox.checked ? 'text' : 'password';
          showPasswordIcon.classList.toggle('fa-eye-slash', showPasswordCheckbox.checked); // Toggle eye slash
        });

        showPasswordIcon.addEventListener('click', function () {
          showPasswordCheckbox.checked = !showPasswordCheckbox.checked; // Toggle checkbox state
          passwordField.type = showPasswordCheckbox.checked ? 'text' : 'password';
          showPasswordIcon.classList.toggle('fa-eye-slash', showPasswordCheckbox.checked); // Toggle eye slash
        });
    </script>
</main>
