@page
@model connect.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<main class="main">
    <section class="forgot-password-container mt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-4">
                            <h2 class="form-title">Forgot Password</h2>
                            <p class="text-center text-muted mb-4">Enter your registered email to reset your password.</p>
                            <form method="post" id="password-reset-form">
                                @Html.AntiForgeryToken() <!-- CSRF Token -->
                                <div class="form-group mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" name="email_address" class="form-control" placeholder="Enter your email address" required autocomplete="true">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-key me-2"></i>Reset Password
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
