    <!-- FAQ Section -->
    <section id="faq" class="faq section light-background py-5">

        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="content px-xl-5">
                        <h3 class="display-5 text-primary">Frequently Asked Questions (FAQs)</h3>
                        <p class="lead">
                            Discover answers to common queries regarding our platform, services, and policies.
                        </p>
                    </div>
                </div>

                <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">

                    <div class="faq-container">
                        <div class="accordion accordion-flush" id="faqAccordion">

                            <!-- FAQ Item 1 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                        How do I book an appointment with a vet?
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        <strong>Booking an appointment is easy!</strong> Log in to your Vet Konnect account, browse the available veterinarians, select one that matches your needs, and choose an available time slot. Confirm your booking, and you will receive a confirmation email with all the details.
                                    </div>
                                </div>
                            </div>

                            <!-- FAQ Item 2 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        Can I reschedule or cancel my appointment?
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Yes, you can reschedule or cancel your appointment through your account. Simply log in, go to "My Appointments," select the booking you want to change, and choose a new time or cancel altogether. <strong>Note:</strong> Cancellations must be made at least 24 hours before the appointment to avoid charges.
                                    </div>
                                </div>
                            </div>

                            <!-- FAQ Item 3 -->
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        How can I get updates on my pet’s treatment?
                                    </button>
                                </h2>
                                <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Once your pet is under care, you can track their treatment progress through our online portal. Vets regularly update records, and you’ll also receive notifications by email or text with important updates and recommendations.
                                    </div>
                                </div>
                            </div>

                        </div><!-- End FAQ Accordion -->
                    </div>

                </div>
            </div>
        </div>
    </section><!-- /FAQ Section -->
    <!-- Contact Section -->
    <section id="contact" class="contact section">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2 class="text-primary">Contact Us</h2>
            <p>We’d love to hear from you!</p>
        </div><!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4">

                <div class="col-lg-6">
                    <div class="row gy-4">
                        <div class="col-md-6">
                            <div class="info-item" data-aos="fade" data-aos-delay="200">
                                <i class="bi bi-geo-alt"></i>
                                <h3>Location</h3>
                                <p>Mega Plaza, Second Floor</p>
                                <p>Oginga Odinga Street, Kisumu City</p>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="col-md-6">
                            <div class="info-item" data-aos="fade" data-aos-delay="300">
                                <i class="bi bi-telephone"></i>
                                <h3>Call Us</h3>
                                <p>0712345678</p>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="col-md-6">
                            <div class="info-item" data-aos="fade" data-aos-delay="400">
                                <i class="bi bi-envelope"></i>
                                <h3>Email Us</h3>
                                <p>vetkonnect@gmail.com</p>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="col-md-6">
                            <div class="info-item" data-aos="fade" data-aos-delay="500">
                                <i class="bi bi-clock"></i>
                                <h3>Open Hours</h3>
                                <p>Monday - Friday</p>
                                <p>9:00AM - 05:00PM</p>
                            </div>
                        </div><!-- End Info Item -->

                    </div>
                </div>

                <div class="col-lg-6">
                    <!-- Display Success/Error Message -->
                    @if (TempData["MessageStatus"] != null)
                    {
                        <div id="alert-box" class="alert alert-@TempData["AlertType"] alert-dismissible fade show" role="alert">
                            <strong>@TempData["MessageStatus"]</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                        @Html.AntiForgeryToken() <!-- CSRF Token -->
                        <div class="row gy-4">
                            <div class="col-md-6">
                                <input type="text" name="name" class="form-control" placeholder="Enter your name" required autocomplete="true">
                            </div>

                            <div class="col-md-6">
                                <input type="email" class="form-control" name="email" placeholder="Enter your email" required autocomplete="true">
                            </div>

                            <div class="col-12">
                                <input type="text" class="form-control" name="subject" placeholder="Enter subject" required autocomplete="true">
                            </div>

                            <div class="col-12">
                                <textarea class="form-control" name="message" rows="6" placeholder="Enter your message" required autocomplete="true"></textarea>
                            </div>

                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div><!-- End Contact Form -->

            </div>
        </div>

    </section><!-- /Contact Section -->

